{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "module": "commonjs",
        "lib": [
            "dom",
            "es2017",
            "esnext"
        ],
        "target": "es5",
        "jsx": "react",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./types"
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}